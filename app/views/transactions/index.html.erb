<div class="w-full">
  <%= link_to "Back to categories", categories_path, class:"text-[30px]"%>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="text-[50px] text-cyan-900">Transactions</h1>
    <%= link_to 'New transaction', new_transaction_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="transactions" class="min-w-full">
    <%= render @transactions %>
  </div>
</div>
