<h1 class="category-header">Categories
  <h1>
    <div class="categories-container">
      <% if @categories.empty? %>
        <h1>There are no categories to show ! Try to Add one</h1>
      <% end %>
      <% @categories.each do |category|%>
        <div class="category-card">
          <img class="block mx-auto h-24 rounded-full sm:mx-0 sm:shrink-0", src=<%= category.icon%>>
          <div class="date-container">
            <h3 class="category-title"><%= link_to "#{category.name}", category%></h3>
          </div>
          <div class="brow">
            <h2 class="">Total amount: $<%= category.total_amount%></h2>
            <%= button_to "Delete", category, method: :delete, class:"destroy-button"%>
          </div>
        </div>
      <% end%>
    </div>
    <div class="Add-button">
      <%= link_to "Add new category",new_category_path%>
    </div>
